body
  font-family "Avenir Next", sans-serif

.label
  display inline-block
  width   7em

  color #999

.container
  max-width 320px
  margin    0 auto

.row
  padding .2em 0

button
input
  font-family "Avenir Next", sans-serif
  font-size   1em

  border-radius .3em

  &:focus
    outline 0
    border-color #999

button
  width   2em
  height  2em
  padding 0
  border  1px solid #ccc

  text-align center

  background none

  cursor pointer

  box-shadow 0 0 .2em rgba(0,0,0,0.15)

input
  border 1px solid transparent

.ratio-input
  width 3em

.coffee-input
  width 3.9em
